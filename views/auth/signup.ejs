<section class="row text-center">
    <div class="col-sm-4">
    </div>
    <div class="col-sm-4">
      <h1>SignUp</h1>
      <h2>Already have an account? <a href="/auth/login" class="btn btn-success">Login</a></h2>
    </div>
    <div class="col-sm-4">
    </div>
</section>
<section class="row text-center">
  <div class="col-sm-3">
  </div>
  <div class="col-sm-6">
    <form method="POST" role="form">
      <div class="form-group">
        <label for="email" class="hidden">Email</label>
        <input type="email" class="form-control" id="email" placeholder="Email" name="email">
      </div>
      <div class="form-group">
        <label for="name" class="hidden">Name</label>
        <input type="text" class="form-control" id="name" placeholder="Name" name="name">
      </div>
      <div class="form-group">
        <label for="password" class="hidden">Password</label>
        <input type="password" class="form-control" id="password" placeholder="Password (min 5 characters)" name="password">
      </div>
      <div class="form-group">
        <label for="password2" class="hidden">Confirm Password</label>
        <input type="password" class="form-control" id="password2" placeholder="Confirm Password" name="password2">
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
  <div class="col-sm-3">
  </div>
</section>
